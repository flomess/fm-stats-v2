{% block scripts %}
<script>
  function dropdownMenu(){
    element = document.querySelector('.dropdown-menu')
    if(element.classList.contains('hidden')){
      element.classList.remove('hidden')
    } else {
      element.classList.add('hidden')
    }
  }
</script> 
{% endblock %}