{% extends 'base.html.twig' %}

{% block title %}Nouveau Joueur{% endblock %}
{% block h1 %}Nouveau joueur de {{ team.getName() }}{%endblock%}

{% block body %}
    {{ form_start(form) }}
    <div class="text-2xl font-bold mt-12"><i class="fa-solid fa-id-card"></i> IDENTITÉ</div>
    <div class="m-auto w-1/2">
        <div class="grid grid-cols-10 gap-1 mt-12 m-auto text-left">
            <div class="col-span-3">
                {{ form_label(form.firstname) }}
            </div>
            <div class="col-span-3">
                {{ form_label(form.lastname) }}
            </div>
            <div class="col-span-4">
                {{ form_label(form.country) }}
            </div>
            <div class="col-span-3">
                {{ form_widget(form.firstname, {'attr':{'class':'p-1 text-purple-fm rounded-sm'}}) }}
            </div>
            <div class="col-span-3">
                {{ form_widget(form.lastname, {'attr':{'class':'p-1 text-purple-fm rounded-sm'}}) }}
            </div>
            <div class="col-span-4">
                {{ form_widget(form.country, {'attr':{'class':'p-1 text-purple-fm rounded-sm'}}) }}
            </div>
        </div>
        <div class="grid grid-cols-3 gap-1 mt-4 text-left">
            <div class="col-span-3">
                {{ form_label(form.position) }}
            </div>
            <div class="col-span-3">
                {{ form_widget(form.position, {'attr':{'class':'p-1 text-purple-fm rounded-sm'}}) }}
            </div>
        </div>
        <div class="text-2xl font-bold mt-12"><i class="fa-solid fa-square-arrow-up-right"></i> ARRIVÉE</div>
        <div class="grid grid-cols-4 mt-12 w-4/6 text-left">
            <div class="col-span-2">
                {{ form_label(form.arrival_type) }}
            </div>
            <div class="col-span-1">
                {{ form_label(form.arrival_date) }}
            </div>
            <div class="col-span-1">
                {{ form_label(form.arrival_winter) }}
            </div>
            <div class="col-span-2">
                {{ form_widget(form.arrival_type, {'attr':{'class':'typeTransfert p-1 text-purple-fm rounded-sm'}}) }}
            </div>
            <div class="col-span-1">
                {{ form_widget(form.arrival_date, {'attr':{'class':'arrival-date p-1 text-purple-fm rounded-sm'}}) }}
            </div>
            <div class="col-span-1">
                {{ form_widget(form.arrival_winter, {'attr':{'class':'p-1 text-purple-fm rounded-sm'}}) }}
            </div>
        </div>
        <div class="grid grid-cols-7 gap-1 mt-4 w-3/4 text-left arrival-team">
            <div class="col-span-3">
                {{ form_label(form.arrival_team) }}
            </div>
            <div class="col-span-1">
                {{ form_label(form.arrival_team_division) }}
            </div>
            <div class="col-span-3">
                {{ form_label(form.arrival_team_country) }}
            </div>
            <div class="col-span-3">
                {{ form_widget(form.arrival_team, {'attr':{'class':'arrival-team-input p-1 text-purple-fm rounded-sm'}}) }}
            </div>
            <div class="col-span-1">
                {{ form_widget(form.arrival_team_division, {'attr':{'class':'arrival-team-input p-1 text-purple-fm rounded-sm'}}) }}
            </div>
            <div class="col-span-3">
                {{ form_widget(form.arrival_team_country, {'attr':{'class':'arrival-team-input p-1 text-purple-fm rounded-sm'}}) }}
            </div>
        </div>
        <div class="grid grid-cols-3 mt-4 text-left arrival-amount">
            <div class="col-span-3">
                {{ form_label(form.arrival_amount) }}
            </div>
            <div class="col-span-3">
                {{ form_widget(form.arrival_amount, {'attr':{'class':'arrival-amount-input p-1 text-purple-fm rounded-sm'}}) }}
            </div>
        </div>
        <div class="mt-12 m-auto">
            {{ form_row(form.save, {'attr':{'class':'btn btn-primary bg-pink-fm p-2 rounded-md shadow-md font-bold transition-all transition-duration-150 hover:bg-pink-fm-light'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('showTransfertType') }}
{% endblock %}