{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex items-center justify-center mt-48">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté avec l'adresse {{ app.user.username }}. <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="text-5xl font-bold mb-12">Connexion</h1>
            <div class="grid grid-cols-2 gap-2">
            <label for="inputEmail" class="p-1 text-right">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control p-1 text-purple-fm rounded-sm" autocomplete="email" required autofocus>
            <label for="inputPassword" class="p-1 text-right">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control p-1 text-purple-fm rounded-sm" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox m-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Rester connecté
                </label>
            </div>


            <button class="btn btn-primary bg-pink-fm p-2 rounded-md shadow-md font-bold transition-all transition-duration-150 hover:bg-pink-fm-light" type="submit">
                Connexion
            </button>
            {# <div class="mt-3 underline text-lg">
                <a href="{{ path('app_register') }}">Inscription</a>
            </div> #}
        </form>

    </div>
{% endblock %}
